---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";

const identity = {
  name: "Piyush Kumar Singh",
  firstName: "Piyush",
  country: "India",
  occupation: "Student",
  university: "IISER Kolkata",
  hobbies: ["Physics", "Coding", "Quantum Gravity"],
};

const skills = [
  "Julia",
  "Python",
  "Matlab",
  "LaTeX",
  "HTML",
  "CSS",
  "JavaScript",
  "Astro",
];

const happy = true;
const finished = true;
const goal = 3;

const skillColor = "navy";
const textWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
  <style define:vars={{ skillColor, textWeight, textCase }}>
    .skill {
      color: var(--skillColor);
      font-weight: var(--textWeight);
      text-transform: var(--textCase);
    }
  </style>

  <p>
    Hello! My name is {identity.name}. I am a {identity.occupation} at{" "}
    {identity.university} in {identity.country}. I am interested in{" "}
    {identity.hobbies.join(", ")}.
  </p>

  <h2>Skills</h2>
  My skills include:
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  <h2>Conditionals</h2>

  {happy && <p>I am happy to be learning Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}

  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>My goal is not 3 days.</p>
    )
  }
</BaseLayout>
